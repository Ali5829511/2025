# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration (Production)
# Deployment URL (set to your Render/production URL)
DEPLOYMENT_URL=https://housing-management-system-83yt.onrender.com

# Add comma-separated list of additional allowed origins for CORS
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=

# Database Configuration
# DATABASE_PATH will default to housing.db in the project root
# DATABASE_PATH=/path/to/custom/housing.db

# Session Configuration
SESSION_TIMEOUT_HOURS=24

# Plate Recognizer ParkPow API Configuration
# Get your API token from https://app.platerecognizer.com/service/parkpow/
PLATE_RECOGNIZER_API_TOKEN=your-api-token-here
PLATE_RECOGNIZER_API_URL=https://api.platerecognizer.com/v1/plate-reader/

# ParkPow API Configuration
# Get your API token from https://app.parkpow.com/accounts/token/
PARKPOW_API_TOKEN=your-parkpow-token-here
PARKPOW_API_URL=https://app.parkpow.com/api/v1
PARKPOW_WEBHOOK_TOKEN=your-webhook-token-here

# Email Configuration
# Configure SMTP settings for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=traffic@university.edu.sa
FROM_NAME=نظام المرور المتكامل

# Security (Production Only)
# SESSION_COOKIE_SECURE=True
# HTTPS_ONLY=True
